<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/gradient_white_green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Logo e Dados da Empresa -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="120dp"
            android:layout_height="92dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="Logo do aplicativo"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logo_fundo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="UNNO PSICOLOGIA E NUTRIÇÃO INTEGRADAS"
            android:textColor="#004D40"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="Psicologia | Nutrição Clínica | Terapia Alimentar"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CNPJ: 60.414.534/0001-96"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="4dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="Endereço: Rua João das Botas, 185\nCentro Médico João das Botas, sala 208\nCanela - Salvador - Bahia"
            android:textSize="12sp" />

        <!-- Card Psicologia -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:elevation="6dp"
            android:padding="12dp"
            app:cardBackgroundColor="@color/verde"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgGabriela"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Foto Psicóloga"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_gabriela" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Responsável Técnica - Psicologia"
                        android:textColor="#004D40"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Psicóloga: Gabriela Leal\nCRP 03/10941"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bora me Conhecer um Pouco Melhor:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/edu_nsw_act_foundation_semibold"
                        android:paddingTop="6dp"
                        android:text="Psicóloga formada pela UFBA, com pós-graduação em Terapia Cognitivo Comportamental (TCC) e especialização em Avaliação Psicológica.\nAtuo com psicoterapia para crianças, adolescentes e adultos.Meu objetivo é oferecer um espaço melhor e construir uma vida mais plena."
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card Nutrição -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:elevation="6dp"
            android:padding="12dp"
            app:cardBackgroundColor="@color/verde"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgSimone"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Foto Nutricionista"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_simone" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Responsável Técnica - Nutrição"
                        android:textColor="#004D40"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nutricionista: Simone Virgens\nCRN5 6497"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bora me Conhecer um Pouco Melhor:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/edu_nsw_act_foundation_semibold"
                        android:paddingTop="6dp"
                        android:text="Musicoterapeuta, nutricionista e graduando em Psicologia, com formação internacional em dificuldade alimentares na infância. \nLibrina, curiosa, nascida de oito meses, sempre fui movida pelo desejo de aprender e entender o mundo ao meu redor."
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
