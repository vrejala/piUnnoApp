<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_white_green"
    tools:context=".MainActivity">

    <!-- Card da Foto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gradient_white_green"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:elevation="6dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp">


    <!-- Foto redonda -->
        <ImageView
            android:id="@+id/imgFotoProfissional"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="Foto do Profissional" />

        <!-- Botão ao lado -->
        <Button
            android:id="@+id/btnFoto"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="#4CAF50"
            android:paddingHorizontal="20dp"
            android:text="Adicionar Foto"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Conteúdo principal com TabHost -->
    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Conteúdo da Guia 1 -->
                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_white_green"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/etNome"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Nome completo"
                        android:background="#F8F9FA"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="#212529"
                        android:textColorHint="#6C757D"
                        android:inputType="textPersonName"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etCadastroProfissional"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Número/Registro no Conselho"
                        android:background="#F8F9FA"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="#212529"
                        android:textColorHint="#6C757D"
                        android:inputType="text"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Email profissional"
                        android:background="#F8F9FA"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="#212529"
                        android:textColorHint="#6C757D"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <EditText
                            android:id="@+id/etTelefone"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:hint="Telefone"
                            android:background="#F8F9FA"
                            android:padding="16dp"
                            android:textColor="#212529"
                            android:textColorHint="#6C757D"
                            android:inputType="phone"
                            android:layout_marginEnd="8dp"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/etValor"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:hint="Valor (R$)"
                            android:background="#F8F9FA"
                            android:padding="16dp"
                            android:textColor="#212529"
                            android:textColorHint="#6C757D"
                            android:inputType="numberDecimal"
                            android:layout_marginStart="8dp"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/etSobre"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="#F8F9FA"
                        android:gravity="top|start"
                        android:hint="Conte um pouco sobre sua experiência profissional..."
                        android:inputType="textMultiLine|textCapSentences"
                        android:padding="16dp"
                        android:textColor="#212529"
                        android:textColorHint="#6C757D"
                        android:textSize="16sp"
                        android:maxLines="6"
                        android:scrollbars="vertical" />
                </LinearLayout>

                <!-- Conteúdo da Guia 2 -->
                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_white_green"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <Spinner
                        android:id="@+id/spEspecialidade"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:entries="@array/especialidade_array"
                        android:background="#F8F9FA"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp"
                        android:elevation="2dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <Spinner
                            android:id="@+id/spAbordagem"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:entries="@array/abordagens_array"
                            android:background="#F8F9FA"
                            android:padding="16dp"
                            android:layout_marginEnd="8dp"
                            android:elevation="2dp" />

                        <Spinner
                            android:id="@+id/spTipoPagamento"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:entries="@array/pagamento_array"
                            android:background="#F8F9FA"
                            android:padding="16dp"
                            android:layout_marginStart="8dp"
                            android:elevation="2dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#FAFAFA"
                        android:padding="16dp"
                        android:elevation="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Disponibilidade"
                            android:layout_weight="1"
                            android:textColor="#37474F"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Switch
                            android:id="@+id/swStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:showText="true"
                            android:textAlignment="center"
                            android:textOff="Inativo"
                            android:textOn="Ativo"
                            android:textStyle="bold"
                            android:thumb="@android:drawable/dialog_holo_light_frame"
                            android:thumbTint="@color/verde"
                            android:trackTint="#4CAF50" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <!-- Botões de Ação -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/gradient_white_green"
        android:padding="16dp"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:elevation="6dp"
            android:text="Salvar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAlterar"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginHorizontal="6dp"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:elevation="6dp"
            android:text="Alterar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
