<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_white_green"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Card central -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_white"
            android:elevation="6dp"
            android:padding="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alterar Senha"
                android:textAlignment="center"
                android:textColor="#1B5E20"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <!-- Campo Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_input"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_email"
                    android:layout_marginStart="16dp"
                    app:tint="#1B5E20" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Digite seu e-mail"
                    android:inputType="textEmailAddress"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="12dp"
                    android:textColor="#000"
                    android:textColorHint="#888"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Senha Atual -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_input"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/etSenhaAtual"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Senha atual"
                    android:inputType="textPassword"
                    android:paddingHorizontal="12dp"/>

                <ImageView
                    android:id="@+id/btnMostrarSenhaAtual"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:src="@drawable/ic_ey_offe"/>
            </LinearLayout>

            <!-- Nova Senha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_input"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lock"
                    android:layout_marginStart="16dp"
                    app:tint="#1B5E20"/>

                <EditText
                    android:id="@+id/etNovaSenha"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Nova senha"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="12dp"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/btnMostrarNovaSenha"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:src="@drawable/ic_ey_offe"/>
            </LinearLayout>

            <!-- Confirmar Nova Senha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_input"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lock"
                    android:layout_marginStart="16dp"
                    app:tint="#1B5E20"/>

                <EditText
                    android:id="@+id/etConfirmarSenha"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Confirme a nova senha"
                    android:inputType="textPassword"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="12dp"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/btnMostrarConfirmarSenha"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:src="@drawable/ic_ey_offe"/>
            </LinearLayout>

            <!-- BotÃ£o Alterar Senha -->
            <Button
                android:id="@+id/btnAlterarSenha"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Alterar Senha"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#1B5E20"
                android:textColor="#FFF"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
