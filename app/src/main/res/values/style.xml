<?xml version="1.0" encoding="utf-8"?>
    <resources>
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ModernInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">#777</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ModernButtonBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="ModernButtonGreen" parent="ModernButtonBase">
        <item name="android:backgroundTint">#4CAF50</item>
    </style>

    <style name="ModernButtonBlue" parent="ModernButtonBase">
        <item name="android:backgroundTint">#2196F3</item>
    </style>

    <style name="ModernButtonRed" parent="ModernButtonBase">
        <item name="android:backgroundTint">#E91E63</item>
    </style>

</resources>



